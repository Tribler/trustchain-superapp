<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <!-- Top Buttons -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/start_transactions_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Group Transactions" />

        <Button
            android:id="@+id/single_transactions_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Single Transactions" />

    </LinearLayout>

    <!-- Text Fields -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/transactions_per_second_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 ms"
            android:layout_marginEnd="10dp" />

        <TextView
            android:id="@+id/single_text_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 ms"
            android:layout_marginStart="10dp" />

    </LinearLayout>

    <!-- Bottom Buttons -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:gravity="center">

        <Button
            android:id="@+id/switch_environment_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="example overlay"
            android:layout_marginEnd="20dp" />

        <Button
            android:id="@+id/toTest_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To Test"
            android:layout_marginStart="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/refresh_database_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update owned tokens list" />
        <TextView
            android:id="@+id/owned_token_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No tokens owned"
            android:layout_marginStart="10dp" />
    </LinearLayout>

</LinearLayout>
