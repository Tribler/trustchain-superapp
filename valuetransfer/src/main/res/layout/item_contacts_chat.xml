        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clChatContentOverview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/flIdenticon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/flIdenticon"
            app:layout_constraintTop_toTopOf="@+id/flIdenticon">

            <TextView
                android:id="@+id/tvContactNameOverview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ivOnlineStatusOverview"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/circle"
                android:backgroundTint="@color/colorPrimaryValueTransfer"
                app:layout_constraintBottom_toBottomOf="@+id/tvContactNameOverview"
                app:layout_constraintStart_toEndOf="@+id/tvContactNameOverview"
                app:layout_constraintTop_toTopOf="@+id/tvContactNameOverview" />

            <ImageView
                android:id="@+id/ivMessageStatusOverview"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_check_double"
                app:layout_constraintEnd_toStartOf="@+id/tvContactMessageOverview"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvContactNameOverview"
                app:tint="@color/white"
                tools:tint="@color/white" />

            <TextView
                android:id="@+id/tvContactMessageOverview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="Message"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ivMessageStatusOverview"
                app:layout_constraintTop_toBottomOf="@+id/tvContactNameOverview" />

            <TextView
                android:id="@+id/tvContactTimeOverview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:00"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:typeface="monospace"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

