<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clDialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="12dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:backgroundTint="@color/colorPrimaryValueTransfer"
    tools:background="@color/colorPrimaryValueTransfer">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Identity Details"
        android:textSize="20sp"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:textColor="@color/white"
        android:textAllCaps="true"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <LinearLayout
        android:id="@+id/clContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle">

        <LinearLayout
            android:id="@+id/llRowOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintTop_toBottomOf="@+id/llRowZero">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Given Names"
                    android:paddingStart="8dp"
                    android:layout_marginBottom="4dp"
                    android:textColor="@color/white"
                    android:textStyle="italic"
                    android:textSize="12sp"
                    android:inputType="textCapWords"/>

                <EditText
                    android:id="@+id/etGivenNames"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/pill_rounded"
                    android:backgroundTint="@color/white"
                    android:paddingVertical="8dp"
                    android:paddingStart="8dp"
                    android:inputType="textCapWords"
                    android:textSize="14sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Surname"
                    android:paddingStart="8dp"
                    android:layout_marginBottom="4dp"
                    android:textColor="@color/white"
                    android:textStyle="italic"
                    android:textSize="12sp"/>

                <EditText
                    android:id="@+id/etSurname"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/pill_rounded"
                    android:backgroundTint="@color/white"
                    android:paddingVertical="8dp"
                    android:paddingStart="8dp"
                    android:inputType="textCapWords"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llRowTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toTopOf="@+id/llRowOne">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Place of Birth"
                    android:paddingStart="8dp"
                    android:layout_marginBottom="4dp"
                    android:textColor="@color/white"
                    android:textStyle="italic"
                    android:textSize="12sp"/>

                <EditText
                    android:id="@+id/etPlaceOfBirth"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/pill_rounded"
                    android:backgroundTint="@color/white"
                    android:paddingVertical="8dp"
                    android:paddingStart="8dp"
                    android:inputType="textCapWords"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date of Birth"
                    android:paddingStart="8dp"
                    android:layout_marginBottom="4dp"
                    android:textColor="@color/white"
                    android:textStyle="italic"
                    android:textSize="12sp"/>

                <EditText
                    android:id="@+id/etDateOfBirth"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/pill_rounded"
                    android:backgroundTint="@color/white"
                    android:paddingVertical="8dp"
                    android:paddingStart="8dp"
                    android:focusable="false"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llRowThree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toTopOf="@+id/llRowTwo">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nationality"
                    android:paddingStart="8dp"
                    android:layout_marginBottom="4dp"
                    android:textColor="@color/white"
                    android:textStyle="italic"
                    android:textSize="12sp"/>

                <EditText
                    android:id="@+id/etNationality"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/pill_rounded"
                    android:backgroundTint="@color/white"
                    android:paddingVertical="8dp"
                    android:paddingStart="8dp"
                    android:inputType="textCapWords"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:paddingStart="8dp"
                    android:layout_marginBottom="4dp"
                    android:textColor="@color/white"
                    android:textStyle="italic"
                    android:textSize="12sp"/>

                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:id="@+id/btnGenderGroup"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    app:singleSelection="true"
                    android:weightSum="2">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnMale"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:insetBottom="0dp"
                        android:insetTop="0dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/white"
                        android:text="Male"
                        android:textAllCaps="false"
                        android:textSize="12sp"
                        android:textColor="@color/colorPrimaryValueTransfer"
                        app:shapeAppearance="@style/Rounded" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnFemale"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:insetBottom="0dp"
                        android:insetTop="0dp"
                        android:text="Female"
                        app:shapeAppearance="@style/Rounded"
                        android:backgroundTint="@color/white"
                        android:textSize="12sp"
                        android:textColor="@color/colorPrimaryValueTransfer"
                        android:textAllCaps="false"
                        android:layout_weight="1" />

                </com.google.android.material.button.MaterialButtonToggleGroup>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llRowFour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toTopOf="@+id/llRowThree">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Personal Number"
                    android:paddingStart="8dp"
                    android:layout_marginBottom="4dp"
                    android:textColor="@color/white"
                    android:textStyle="italic"
                    android:textSize="12sp"/>

                <EditText
                    android:id="@+id/etPersonalNumber"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:background="@drawable/pill_rounded"
                    android:backgroundTint="@color/white"
                    android:paddingVertical="8dp"
                    android:paddingStart="8dp"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Document Number"
                    android:paddingStart="8dp"
                    android:layout_marginBottom="4dp"
                    android:textColor="@color/white"
                    android:textStyle="italic"
                    android:textSize="12sp"/>

                <EditText
                    android:id="@+id/etDocumentNumber"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/pill_rounded"
                    android:backgroundTint="@color/white"
                    android:paddingVertical="8dp"
                    android:paddingStart="8dp"
                    android:inputType="textCapCharacters"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/clContent"
        app:layout_constraintEnd_toStartOf="@+id/clSaveIdentity"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone"
        tools:visibility="visible">

        <Button
            android:id="@+id/btnCancel"
            style="@style/ButtonRedRounded"
            android:layout_marginTop="12dp"
            android:text="Cancel"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clSaveIdentity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/clContent"
        app:layout_constraintStart_toEndOf="@+id/clCancel"
        app:layout_constraintEnd_toEndOf="parent">
        <Button
            android:id="@+id/btnSaveIdentity"
            style="@style/ButtonDarkGreenRounded"
            android:layout_marginTop="12dp"
            android:text="Save"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
