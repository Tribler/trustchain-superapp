<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/colorPrimaryValueTransfer">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvIdentities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                tools:itemCount="1"
                tools:listitem="@layout/item_identity_detail" />

            <TextView
                android:id="@+id/tvAttributesTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:text="Identity Attributes"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_constraintEnd_toStartOf="@+id/ivAttributesInfoIcon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rvIdentities" />

            <ImageView
                android:id="@+id/ivAttributesInfoIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:padding="4dp"
                android:src="@drawable/ic_baseline_info_24"
                app:tint="@color/white"
                tools:tint="@color/white"
                android:tooltipText="Attributes provide extra information about you and your identity"
                app:layout_constraintBottom_toBottomOf="@+id/tvAttributesTitle"
                app:layout_constraintStart_toEndOf="@+id/tvAttributesTitle"
                app:layout_constraintTop_toTopOf="@+id/tvAttributesTitle" />

            <ImageView
                android:id="@+id/ivAddAttribute"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="12dp"
                android:padding="4dp"
                android:background="@drawable/pill_rounded"
                android:backgroundTint="@color/white"
                android:src="@drawable/ic_add_black_24dp"
                tools:background="@drawable/pill_rounded"
                app:tint="@color/colorPrimaryValueTransfer"
                tools:tint="@color/colorPrimaryValueTransfer"
                app:layout_constraintBottom_toBottomOf="@+id/tvAttributesTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvAttributesTitle" />

            <TextView
                android:id="@+id/tvNoAttributes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/pill_rounded"
                android:paddingVertical="4dp"
                android:text="There are no attributes yet"
                android:textColor="@color/white"
                android:textStyle="italic"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvAttributesTitle"
                tools:visibility="visible" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvAttributes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/tvNoAttributes"
                tools:itemCount="1"
                tools:listitem="@layout/item_identity_attribute" />

            <TextView
                android:id="@+id/tvAttestationsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:text="Attestations"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_constraintEnd_toStartOf="@+id/ivAttestationsInfoIcon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rvAttributes" />

            <ImageView
                android:id="@+id/ivAttestationsInfoIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:padding="4dp"
                android:src="@drawable/ic_baseline_info_24"
                app:tint="@color/white"
                tools:tint="@color/white"
                android:tooltipText="Attestations declare that a claim about a piece of information is validated by an authority"
                app:layout_constraintBottom_toBottomOf="@+id/tvAttestationsTitle"
                app:layout_constraintStart_toEndOf="@+id/tvAttestationsTitle"
                app:layout_constraintTop_toTopOf="@+id/tvAttestationsTitle" />

            <ImageView
                android:id="@+id/ivAddAttestation"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="12dp"
                android:padding="4dp"
                android:background="@drawable/pill_rounded"
                android:backgroundTint="@color/white"
                android:src="@drawable/ic_add_black_24dp"
                tools:background="@drawable/pill_rounded"
                app:tint="@color/colorPrimaryValueTransfer"
                tools:tint="@color/colorPrimaryValueTransfer"
                app:layout_constraintBottom_toBottomOf="@+id/tvAttestationsTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvAttestationsTitle" />

            <TextView
                android:id="@+id/tvNoAttestations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/pill_rounded"
                android:paddingVertical="4dp"
                android:text="There are no attestations yet"
                android:textColor="@color/white"
                android:textStyle="italic"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvAttestationsTitle"
                tools:visibility="visible" />

<!--            <TextView-->
<!--                android:id="@+id/tvNoAttestations"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_margin="12dp"-->
<!--                android:background="@drawable/pill_rounded"-->
<!--                android:backgroundTint="@color/white"-->
<!--                android:gravity="center"-->
<!--                android:paddingHorizontal="12dp"-->
<!--                android:paddingVertical="16dp"-->
<!--                android:text="CLICK HERE TO ADD ATTESTATION"-->
<!--                android:textColor="@color/colorPrimaryValueTransfer"-->
<!--                android:textStyle="bold"-->
<!--                android:visibility="gone"-->
<!--                app:layout_constraintEnd_toEndOf="parent"-->
<!--                app:layout_constraintStart_toStartOf="parent"-->
<!--                app:layout_constraintTop_toBottomOf="@+id/tvAttestationsTitle"-->
<!--                tools:visibility="visible" />-->

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvAttestations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/tvNoAttestations"
                tools:itemCount="1"
                tools:listitem="@layout/item_identity_attestation" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

