<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clOptionBigContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="8dp"
    android:paddingBottom="8dp"
    android:layout_weight="1"
    android:background="@drawable/pill_rounded"
    android:backgroundTint="?attr/widgetColor">

    <ImageView
        android:id="@+id/ivOptionBig"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_max="30dp"
        app:layout_constraintHeight_max="30dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_contact"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvOptionBig"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="4dp"
        android:gravity="center_horizontal"
        android:textSize="14sp"
        android:textColor="?attr/onBackgroundColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivOptionBig"
        android:text="Option" />

</androidx.constraintlayout.widget.ConstraintLayout>
