<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme" />

    <style name="Theme.ValueTransfer" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/light_gray</item>
    </style>

    <style name="MenuLabelStyle">
        <item name="android:textColor">@color/text_tertiary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Rounded" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:backgroundTint">@drawable/dialog_rounded</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/colorPrimaryValueTransfer</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/dialog_rounded</item>
    </style>

    <style name="BottomSheetRed" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/dialog_rounded_red</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/colorPrimaryValueTransfer</item>
    </style>

    <style name="BaseBottomSheetDialogRed" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheetRed</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/colorRed</item>
    </style>

    <style name="ButtonRounded" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/button_rounded</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ButtonWhiteRounded" parent="ButtonRounded">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/colorPrimaryValueTransfer</item>
    </style>

    <style name="ButtonRedRounded" parent="ButtonRounded">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">#FF6961</item>
    </style>

    <style name="ButtonGreenRounded" parent="ButtonRounded">
        <item name="backgroundTint">@color/colorPrimaryValueTransfer</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonDarkGreenRounded" parent="ButtonRounded">
        <item name="backgroundTint">@color/colorPrimaryDarkValueTransfer</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimaryValueTransfer</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/ButtonGreenRounded</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/ButtonWhiteRounded</item>
    </style>

    <style name="ChatMessageItem">
        <item name="android:ellipsize">end</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
<!--        <item name="android:paddingTop">8dp</item>-->
<!--        <item name="android:paddingBottom">8dp</item>-->
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ChatMessageItemTime">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">10sp</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="BottomNavigation">
        <item name="android:background">@color/colorPrimaryValueTransfer</item>
        <item name="itemBackground">@color/colorPrimaryValueTransfer</item>
        <item name="itemIconTint">@drawable/bottom_navigation_color</item>
        <item name="itemTextColor">@drawable/bottom_navigation_color</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="paddingStart">10dp</item>
        <item name="paddingEnd">10dp</item>
    </style>

</resources>
