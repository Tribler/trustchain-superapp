<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme" />

    <style name="Theme.OfflineMoney" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/green_190</item>
        <item name="colorPrimaryDark">@color/green_dark</item>
    </style>

    <style name="MenuLabelStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearanceOverlay">@style/ButtonAppearance</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">14dp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="ButtonAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">30dp</item>
    </style>
</resources>

