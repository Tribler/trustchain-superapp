<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_offlinemoney"
    app:startDestination="@id/transferFragment">
    <fragment
        android:id="@+id/transferFragment"
        android:name="nl.tudelft.trustchain.offlinedigitaleuro.ui.TransferFragment"
        android:label="Offline Euro"
        tools:layout="@layout/activity_main_offline_money">
        <action
            android:id="@+id/action_transferFragment_to_sendAmountFragment"
            app:destination="@id/sendAmountFragment"
            />
        <action
            android:id="@+id/action_transferFragment_to_printMoneyFragment"
            app:destination="@id/printMoneyFragment"
            />
        <action
            android:id="@+id/action_transferFragment_to_acceptMoneyFragment"
            app:destination="@id/acceptMoneyFragment"
            />
    </fragment>

    <fragment
        android:id="@+id/sendMoneyFragment"
        android:name="nl.tudelft.trustchain.offlinedigitaleuro.ui.SendDigitalEuroFragment"
        android:label="Transfer"
        tools:layout="@layout/send_money_fragment">
        <action
            android:id="@+id/action_sendMoneyFragment_to_transferFragment"
            app:destination="@id/transferFragment"
            />
    </fragment>

    <fragment
        android:id="@+id/sendAmountFragment"
        android:name="nl.tudelft.trustchain.offlinedigitaleuro.ui.SendAmountFragment"
        android:label="Transfer"
        tools:layout="@layout/send_amount_fragment">
        <action
            android:id="@+id/action_sendAmountFragment_to_transferFragment"
            app:destination="@id/transferFragment"
            />
        <action
            android:id="@+id/action_sendAmountFragment_to_sendMoneyFragment"
            app:destination="@id/sendMoneyFragment"
            />
    </fragment>

    <fragment
        android:id="@+id/transactionsFragment"
        android:name="nl.tudelft.trustchain.offlinedigitaleuro.ui.TransactionsFragment"
        android:label="Web of Trust"
        tools:layout="@layout/transactions_fragment">
    </fragment>

    <fragment
        android:id="@+id/printMoneyFragment"
        android:name="nl.tudelft.trustchain.offlinedigitaleuro.ui.PrintDigitalEuroFragment"
        android:label="Print Money"
        tools:layout="@layout/print_money_fragment">
        <action
            android:id="@+id/action_printMoneyFragment_to_transferFragment"
            app:destination="@id/transferFragment"
            />
    </fragment>

    <fragment
        android:id="@+id/acceptMoneyFragment"
        android:name="nl.tudelft.trustchain.offlinedigitaleuro.ui.AcceptEuroFragment"
        android:label="Accept Euro"
        tools:layout="@layout/accept_euro_fragment">
        <action
            android:id="@+id/action_acceptMoneyFragment_to_transferFragment"
            app:destination="@id/transferFragment"
            />
    </fragment>
</navigation>
